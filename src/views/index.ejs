<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos estão abaixo</p>

            <%- include('includes/messages') %>
            <% if (user) { %>
                <% if (contatos.length > 0) { %>
                    <div class="responsive-table">
                        <table class="table my-2">
                            <% contatos.forEach(e => { %>
                                <tr>
                                    <td><%= e.nome %></td>
                                    <td><%= e.sobrenome %></td>
                                    <td><%= e.telefone %></td>
                                    <td><%= e.email %></td>
                                    <td><a href="/contato/index/<%= e._id %>">Editar</a></td>
                                    <td><a class="text-danger" href="/contato/delete/<%= e._id %>">Excluir</a></td>
                                </tr>
                            <% }) %>
                            
                        </table>
                    </div>
                <% } else{ %>
                    <p class="text-center lead">Não existem contatos na sua agenda</p>
                <% } %>
            <% } else{ %>
                <p class="text-center lead">Você precisa estar logado para ver os contatos</p>
            <% } %> 
            

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>